section(class='slider-container')
	h2(class='slider-container__title')
		img(src="images/home/cards.svg", class='slider-container__title-icon' alt="icon title bullet")
		| NFL
	div(class='swiper home-promo-slider')
		div(class='swiper-wrapper home-promo-slider__swiper-wrapper')
			-for(let i = 1; i<=6; i++ )
				a(href="https://www.google.com/" class='swiper-slide home-promo-slider__item')
					img(src="images/home/promos/promo_1.webp", class='home-promo-slider__image', alt="promo_1")
					div(class='home-promo-slider__text-container')
						h3(class='home-promo-slider__text-container-title') LESS JUICE
						span(class='home-promo-slider__text-container-sub-title') BONUS
						span(class='home-promo-slider__text-container-description') Pay Half on Every Bet
		div(class='swiper-button-prev home-promo-slider__prev')
		div(class='swiper-button-next home-promo-slider__next')
